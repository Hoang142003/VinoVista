<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#F8E4CC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvDV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp" />
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTenCTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên dịch vụ"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvGiaCTD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giá dịch vụ"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/ivTru"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"

                  android:src="@drawable/decrease" />

              <EditText
                  android:textStyle="normal"
                  android:id="@+id/edtSonguoi"

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_toRightOf="@id/ivTru"
                  android:text="0" />

              <ImageView
                  android:id="@+id/ivCong"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/edtSonguoi"
                  android:layout_centerVertical="true"
                  android:src="@drawable/increase" />
          </RelativeLayout>
        </LinearLayout>

            <ImageButton
                android:id="@+id/imgbAdd"
                style="@style/imgbuttonadd"
                android:background="@drawable/cancel"
                android:layout_alignParentEnd="true" />

    </LinearLayout>
</LinearLayout>