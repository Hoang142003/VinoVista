<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_ThemNhanVien">

    <ImageButton
        android:id="@+id/imbAnhNhanVienMoi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:background="@color/begie"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/edtTenNv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:hint="Nhập tên nhân viên"
        android:padding="10dp" />

    <TextView
        android:id="@+id/edtSoDienThoaiNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:hint="Nhập số điện thoại"
        android:padding="10dp" />

    <TextView
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:hint="Nhập địa chỉ"
        android:padding="10dp" />

    <TextView
        android:id="@+id/edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:hint="Nhập mật khẩu"
        android:padding="10dp" />

    <TextView
        android:id="@+id/edtLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_bg_edittext"
        android:hint="Nhập lương"
        android:inputType="number"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_bg_button"
        android:text="Lưu"
        android:textColor="@color/begie" />
</LinearLayout>