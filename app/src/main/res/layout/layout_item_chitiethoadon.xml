<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_item_quanlyhoadon"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvTenSP_TTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            style="@style/TextView_QuanLyHoaDon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGia_TTHD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="999.999đ"
            style="@style/TextView_QuanLyHoaDon"/>

        <TextView
            android:id="@+id/tvSoLuong_TTHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: X"
            style="@style/TextView_QuanLyHoaDon"/>

    </LinearLayout>

</LinearLayout>
