<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VinoVista" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.VinoVista" parent="Base.Theme.VinoVista" />
    <style name="title">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="edt">
        <item name="android:background">@drawable/edt_select</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="btn">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_select</item>
    </style>
    <style name="tv">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="tv1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="tv3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="btnHuy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btnhuy</item>

    </style>
    <style name="btnTiepTuc">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btntieptuc</item>

    </style>
    <style name="button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/buttonselec</item>
    </style>
    <style name="edtSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/edtsearch</item>
    </style>
    <style name="imgbuttonadd">
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/buttonselec</item>
    </style>
</resources>